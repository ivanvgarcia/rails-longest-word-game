<h1 class="title text-center">New Game</h1>

<section class="letters-display">
    <% @letters.each do |letter| %>
        <div class="letters-display__letter">
            <%= letter %>
        </div>
        <% end %>
</section>

<section class="form-section">
    <h2 class="title text-center">What is the longest word you can find?</h2>
    <form action="/score" method="post" class="form">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            <input type="text" name="word" placeholder="Write a word here..." class="form__text">
            <input name="letters" type="hidden" value=<%="#{@letters.join('')}" %>>
            <input type="submit" class="form__submit">
    </form>
</section>